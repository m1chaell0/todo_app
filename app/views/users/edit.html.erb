<div class="form-container">
  <h1>User Profile</h1>

  <% if @user.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@user.errors.count, "error") %> prevented updating the profile:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @user, url: user_path(@user), method: :patch, local: true, html: { class: "signup-form" }) do |f| %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-input" %>
    </div>

    <div class="form-group">
    <%= f.label :email_address %>
    <%= f.email_field :email_address, autocomplete: "username", class: "form-input"%><br>
    </div>


    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-input", placeholder: "Please enter your password" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Save Changes", class: "form-button" %>
    </div>

    <%= link_to "Change Password", change_password_user_path(@user), class: "change-password-link" %>
  <% end %>
</div>


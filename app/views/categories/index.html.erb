<h1>Categories</h1>

<%= link_to "New Category", new_category_path, class: "btn btn-primary" %>

<% if @categories.any? %>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <% if category.user_id == current_user.id %>
            <%= link_to edit_category_path(category), class: "icon-btn", title: "Edit Category" do %>
              <i class="fa fa-edit"></i>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if category.user_id == current_user.id %>
            <%= link_to category_path(category),
                        data: {
                          turbo_method: :delete,
                          turbo_confirm: "Are you sure you want to delete this category?"},
                        class: "icon-btn",
                        title: "Delete Category" do %>
              <i class="fa fa-trash"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>No categories found.</p>
<% end %>

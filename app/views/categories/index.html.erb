<h1>Categories</h1>

<%= link_to "New Category", new_category_path, class: "btn btn-primary" %>

<% if @categories.any? %>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th> <!-- for show/edit/delete links -->
    </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to "Show", task_path(category) if category.user_id == current_user.id %></td>
        <td><%= link_to "Edit", edit_task_path(category) if category.user_id == current_user.id %></td>
        <% if category.user_id == current_user.id %>
          <td><%= link_to "Delete", task_path(category),
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete this category?" }
          %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>No categories found.</p>
<% end %>

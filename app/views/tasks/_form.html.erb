<%= form_with(model: task, local: true) do |f| %>
  <% if task.errors.any? %>

    <div style="color: red;">
      <h2><%= pluralize(task.errors.count, "error") %> prevented saving this task:</h2>
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 3 %>
  </p>

  <p>
    <%= f.label :scheduled_for %><br>
    <%= f.datetime_select :scheduled_for %>
  </p>

  <p>
    <%= f.label :category_id, "Category" %><br>
    <%= f.collection_select :category_id, @categories, :id, :name, include_blank: false %>
  </p>

  <%= f.submit %>
<% end %>

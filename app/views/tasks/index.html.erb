<h1>Tasks</h1>

<%= link_to "New Task", new_task_path, class: "btn btn-primary" %>

<% if @tasks.any? %>
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Scheduled For</th>
      <th>Category</th>
      <th colspan="3"></th> <!-- for show/edit/delete links -->
    </tr>
    </thead>
    <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.scheduled_for.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= task.category.name %></td>
        <td><%= link_to "Show", task_path(task) %></td>
        <td><%= link_to "Edit", edit_task_path(task) %></td>
        <td><%= link_to "Delete", task_path(task),
                        method: :delete,
                        data: { confirm: "Are you sure you want to delete this task?" } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>No tasks found.</p>
<% end %>

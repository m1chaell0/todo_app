<div class="form-container">
  <h1>Task Details</h1>

  <div class="form-group">
    <label>Title</label>
    <div class="detail-value">
      <%= @task.title %>
    </div>
  </div>

  <div class="form-group">
    <label>Description</label>
    <div class="detail-value">
      <%= @task.description.presence || "No description" %>
    </div>
  </div>

  <div class="form-group">
    <label>Start Time</label>
    <div class="detail-value">
      <%= @task.start_time.strftime("%Y-%m-%d %H:%M") %>
    </div>
  </div>

  <div class="form-group">
    <label>End Time</label>
    <div class="detail-value">
      <% if @task.end_time.present? %>
        <%= @task.end_time.strftime("%Y-%m-%d %H:%M") %>
      <% else %>
        <%= "N/A" %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <label>Category</label>
    <div class="detail-value">
      <%= @task.category&.name || "N/A" %>
    </div>
  </div>

  <div class="form-group">
    <label>Created At</label>
    <div class="detail-value">
      <%= @task.created_at.strftime("%Y-%m-%d %H:%M") %>
    </div>
  </div>

  <hr>

  <div class="form-actions">
    <%= link_to "Edit", edit_task_path(@task), class: "form-button" %>

    <%= link_to "Back to Tasks", tasks_path, class: "form-button btn-secondary" %>
  </div>
</div>
